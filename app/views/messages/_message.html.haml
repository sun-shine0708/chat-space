.right-box1
  .right-info1
    = message.user.name
    = message.created_at.strftime("%Y/%m/%d %H:%M")
  .right-message1
    - if message.content.present?
      %p.right-message1__content
        = message.content
    = image_tag message.image.url, class: 'right-message1__image' if message.image.present?