.contents-left
  .contents-left-header
    .box1
      .box1__name
        = current_user.name
      .box1__menu
        %div{"data-turbolinks": "false"}
          = link_to new_group_path do
            = fa_icon 'pencil-square-o', class: "box1__menu--icon"
        = link_to edit_user_path(current_user) do
          = fa_icon 'cog', class: "box1__menu--icon"

  .contents-left-body
    - current_user.groups.each do |group|
      .group1
        = link_to group_messages_path(group) ,class: "edit-link" do
          .group1-name
            = group.name
          .group1-message
            = group.show_last_message